<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minHeight="200dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:orientation="vertical"
        app:cardCornerRadius="3dp">

        <vn.taa.mrta.custom.EditTextCSE
            android:id="@+id/edt_enter_prescription_drug_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:hint="Tên thuốc..."
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:padding="15dp"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:elevation="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <vn.taa.mrta.custom.EditTextCSE
                android:id="@+id/edt_enter_prescription_drug_quantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:elevation="8dp"
                android:hint="Số lượng..."
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueSuperDark" />

            <vn.taa.mrta.custom.EditTextCSE
                android:id="@+id/edt_enter_prescription_drug_unit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:elevation="8dp"
                android:hint="Đơn vị..."
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:padding="15dp"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:elevation="8dp"
        android:orientation="vertical">

        <vn.taa.mrta.custom.EditTextCSE
            android:id="@+id/edt_enter_prescription_drug_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="8dp"
            android:gravity="top"
            android:hint="Ghi chú..."
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:minHeight="70dp"
            android:padding="15dp"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <vn.taa.mrta.custom.TextViewCSE
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="42dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Liều lượng thuốc theo buổi"
            android:textColor="@color/colorBlueSuperDark" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:elevation="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <vn.taa.mrta.custom.EditTextCSE
                    android:id="@+id/edt_enter_prescription_drug_quantity_morning"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:elevation="8dp"
                    android:hint="Sáng..."
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/colorBlueSuperDark" />

                <vn.taa.mrta.custom.EditTextCSE
                    android:id="@+id/edt_enter_prescription_drug_quantity_rnoon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:elevation="8dp"
                    android:hint="Trưa..."
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:elevation="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <vn.taa.mrta.custom.EditTextCSE
                    android:id="@+id/edt_enter_prescription_drug_quantity_afternoon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:elevation="8dp"
                    android:hint="Chiều..."
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/colorBlueSuperDark" />

                <vn.taa.mrta.custom.EditTextCSE
                    android:id="@+id/edt_enter_prescription_drug_quantity_evening"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:elevation="8dp"
                    android:hint="Tối..."
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="3dp">

            <vn.taa.mrta.custom.ButtonCSE
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_ok_blue"
                android:text="@string/save_info"
                android:textColor="@android:color/white" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>